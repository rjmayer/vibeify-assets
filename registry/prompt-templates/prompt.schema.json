{
  "schema_version": 1,
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vibeify Prompt Schema",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "service",
    "version",
    "inputs",
    "context",
    "instructions",
    "output"
  ],
  "additionalProperties": true,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "service": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "inputs": {
      "type": "object",
      "required": [
        "arguments"
      ],
      "properties": {
        "arguments": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "type",
              "description",
              "required"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "required": {
                "type": "boolean"
              }
            }
          }
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "payload"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "payload": {
                "type": "object"
              }
            }
          }
        }
      },
      "additionalProperties": true
    },
    "context": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "inline": {
          "type": "object"
        },
        "requires": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "instructions": {
      "type": "object",
      "required": [
        "steps"
      ],
      "properties": {
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "model_preferences": {
          "type": "object"
        }
      },
      "additionalProperties": true
    },
    "output": {
      "type": "object",
      "required": [
        "format"
      ],
      "properties": {
        "format": {
          "type": "string"
        },
        "schema": {
          "type": "object"
        },
        "postprocessing_notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "tests": {
      "type": "object",
      "properties": {
        "cases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "input_ref": {
                "type": "string"
              },
              "input": {
                "type": "object"
              },
              "assertions": {
                "type": "object"
              }
            }
          }
        }
      },
      "additionalProperties": true
    }
  }
}